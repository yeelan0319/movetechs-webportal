<script type="text/javascript">
	$(document).ready(function(){
		$('.main').css('height', $('.content-active').height());

		$(document).scroll(function(){
			var scrollTop = $(document).scrollTop();
			//decide whether need to fix secondary navigation bar and light up corresponding nav>li
			if(scrollTop >= 50){
				$('.navbar-secondary').addClass("navbar-fixed");
			}
			else{
				$('.navbar-secondary').removeClass("navbar-fixed");
			}
		});

		$('.navbar-secondary li').not(':first-child').click(function(){
			var current = $('.content-active');
			var target = $(this).data('hyperlink');
			if(current.attr('id') == target) {
				return;
			}
			$('.navbar-secondary .navbar-nav li.active').removeClass('active');
			$(this).addClass('active');
			
			var next = $('#' + target);
			current.removeClass('content-active')
				.data('scroll', $(document).scrollTop());
			next.addClass('content-active');
			$('.main').css('height', next.height());
			if($(document).scrollTop() > 50){
				$(document).scrollTop(50);
			}
		});
		$('#rotate-slider').slider({
			start: function( event, ui ) {
				$(this).parents('.container').addClass('is-dragging');
			},
			stop: function(event, ui) {
				$(this).parents('.container').removeClass('is-dragging');
			}
		});
	});
		
</script>
