				if(scrollTop < a[1] && !$('.navbar-secondary li:nth-child(1)').hasClass('active')){
					$('.navbar-secondary li.active').removeClass('active');
					$('.navbar-secondary li:nth-child(1)').addClass('active');
				}
				else if(scrollTop >= a[1] && scrollTop < a[2] && !$('.navbar-secondary li:nth-child(2)').hasClass('active')){
					$('.navbar-secondary li.active').removeClass('active');
					$('.navbar-secondary li:nth-child(2)').addClass('active');
				}
				else if(scrollTop >= a[2] && scrollTop < a[3] && !$('.navbar-secondary li:nth-child(3)').hasClass('active')){
					$('.navbar-secondary li.active').removeClass('active');
					$('.navbar-secondary li:nth-child(3)').addClass('active');
				}
				else if(scrollTop >= a[3] && scrollTop < a[4] && !$('.navbar-secondary li:nth-child(4)').hasClass('active')){
					$('.navbar-secondary li.active').removeClass('active');
					$('.navbar-secondary li:nth-child(4)').addClass('active');
				}
				else if(scrollTop >= a[4] && !$('.navbar-secondary li:nth-child(5)').hasClass('active')){
					$('.navbar-secondary li.active').removeClass('active');
					$('.navbar-secondary li:nth-child(5)').addClass('active');
				}
			}
			else{
				$('.navbar-secondary').removeClass("navbar-fixed");
				$('.navbar-secondary li.active').removeClass('active');
			}
		});
		$('.navbar-secondary li').click(function(){
			if($(document).data('scrolling')) return;
			$(document).data('scrolling', true);
			$('.navbar-secondary li.active').removeClass('active');
			$(this).addClass('active');
			$('html, body').animate({
				scrollTop: $(this).data('anchor') + 50 + 'px'
			}, 600, function(){
				$(document).data('scrolling', false);
			});
		});
		$('#rotate-slider').slider({
			start: function( event, ui ) {
				$(this).parents('.container').addClass('is-dragging');
			},
			stop: function(event, ui) {
				$(this).parents('.container').removeClass('is-dragging');
			}
		});
	});
		
</script>
